<h1>My Orders</h1>




<div class="container">
<div class="container">
<div class="container">
<div class="container">
<div class="container">
<div class="container">
<div class="row">
  <% @ordereds.each do |ordered| %>

<% if current_user.id.to_i == ordered.user_id.to_i %>
      <div class="col-sm-4">
        <div class="card border-dark mb-4" style="max-width: 25.4rem;">
            <div class="card",style="width: 25rem;">
              <% begin %>
              <%= image_tag(Product.find(ordered.order_item.product_id).img_url, :size => "365x300") %>
              <% rescue %>
              <%= image_tag("no_image/no_image_available.png", :size => "364x300") %>
              <% end %>
            <div class="card-body">
              <p class="card-text">
                <%=Product.find(ordered.order_item.product_id).title %> |<%= Product.find(ordered.order_item.product_id).description %><br/>
                Quantity: <%= ordered.order_item.quantity%> | Total: <%= ordered.total %><br/><br/>
              <%= link_to 'Show', ordered ,class:"btn btn-primary" %> <%= link_to 'Remove',ordered, class:"btn btn-danger",method: :delete, data: { confirm: 'Are you sure?' } %>

              <%= link_to ' Review',myreview_index_path(:id=>ordered.order_item.product_id),class:"btn btn-success"%>

            </div>
          </div>
          </div>
          </div>
<%end%>
  <% end %>


</div>
</div>
</div>
