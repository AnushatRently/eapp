<p id="notice"><%= notice %></p>

<h1>My Addresses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Phone number</th>
      <th>Door no</th>
      <th>Street</th>
      <th>City</th>
      <th>District</th>
      <th>Pincode</th>
      <th>State</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <% if address.user_id.to_i == current_user.id.to_i %>
        <td><%= address.name %></td>
        <td><%= address.age %></td>
        <td><%= address.phone_number %></td>
        <td><%= address.door_no %></td>
        <td><%= address.street %></td>
        <td><%= address.city %></td>
        <td><%= address.district %></td>
        <td><%= address.pincode %></td>
        <td><%= address.state %></td>
        <td><%= address.user_id %></td>
        <td><%= link_to 'Show', address %></td>
        <td><%= link_to 'Edit', edit_address_path(address) %></td>
        <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
