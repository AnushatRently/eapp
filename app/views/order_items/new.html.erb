<br/>
<h1><%=@product.title%></h1>

<h1>Unit Cost : <%=@product.cost%></h1>

<%= image_tag(@product.img_url, :size => "260x180") %>
<br/>
<br/>
<%= form_with model: @order_item do |form| %>
<%= form.hidden_field:user_id, :value=>current_user.id %>
<%= form.hidden_field:product_id, :value=> @product.id%>
<div class="col-sm-5"class="form-label">
  <%= form.number_field :quantity, class:"form-control",placeholder:"Quantity" %>
</div>
<br/>
<%= form.submit class:"btn btn-success"%>
<% end %>
