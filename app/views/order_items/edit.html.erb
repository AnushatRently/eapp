<h1><%=@product.title%></h1>

<h1>Unit Cost : <%=@product.cost%></h1>

<%= form_with model: @order_item do |form| %>
<%= form.hidden_field:user_id, :value=>current_user.id %>
<%= form.hidden_field:product_id, :value=> @product.id%>
<%= form.text_field:quantity,placeholder:"quantity" %>
<%= form.submit%>
<% end %>
