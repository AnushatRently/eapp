<%= form_with(model: ordered) do |form| %>
  <% if ordered.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(ordered.errors.count, "error") %> prohibited this ordered from being saved:</h2>

      <ul>
        <% ordered.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">

    <%= form.hidden_field :user_id, :value=>current_user.id  %>
  </div>

  <div class="field">

    <%= form.hidden_field :order_item_id, :value=>@order_item.product.id %>
  </div>

  <div class="field">

    <%= form.hidden_field :total, :value=>@total %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<% if @addresses_has %>

<p id="notice"><%= notice %></p>

<h1>My Addresses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Phone number</th>
      <th>Door no</th>
      <th>Street</th>
      <th>City</th>
      <th>District</th>
      <th>Pincode</th>
      <th>State</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <% if address.user_id.to_i == current_user.id.to_i %>
        <td><%= address.name %></td>
        <td><%= address.age %></td>
        <td><%= address.phone_number %></td>
        <td><%= address.door_no %></td>
        <td><%= address.street %></td>
        <td><%= address.city %></td>
        <td><%= address.district %></td>
        <td><%= address.pincode %></td>
        <td><%= address.state %></td>
        <td><%= address.user_id %></td>
        <td><%= link_to 'Edit', edit_address_path(address) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% else %>
<h2><%=link_to "Add Address",new_address_path %> </h2>
<% end %>
