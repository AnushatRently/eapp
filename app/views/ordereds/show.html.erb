<h1> Delivery Address </h1>

    <% @addresses.each do |address| %>

        <% if address.user_id.to_i == current_user.id.to_i %>
        <%= address.name %><br/>
        <br/><%= address.door_no %>,<%= address.street %>,<%= address.city %>,<%= address.district %>,<%= address.state %>,PINCODE: <%= address.pincode %><br/>
        <br/>
        CONTACT: <%= address.phone_number %><br/>
        <br/>
        <%= link_to 'Change Address', edit_address_path(address),class:"btn btn-danger" %>
        <% end %>
    <% end %>
