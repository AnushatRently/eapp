<div class="jumbotron">

      <h1 class="display-4" ><%= (Product.find(@id)).title %></h1>
      <h3 class="lead">
        <%= Product.find(@id).description %></h3><br/>
        <h3>Quantity: <%= @ordered.order_item.quantity %></h3>
      <h4 class="my-4">
        Total: <%= @ordered.total %></h4><br/>
        <% if (Product.find(@id)).img_presence == 1 %>
          <%= image_tag((Product.find(@id)).img_url, :size => "260x180") %>
        <% else %>
          <%= image_tag("no_image/no_image.png", :size => "260x180") %>
        <% end %>
      <br/>
      <br/>
      <%= link_to 'Edit', edit_order_item_path(:prod_id => @id, :id=>@ordered.order_item.id,:od=>@ordered.id ),class:"btn btn-success" %> <%= link_to 'Back', shops_path, class:"btn btn-success"%>

</div>

