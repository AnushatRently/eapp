<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table class="table table-success table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Cost</th>
      <th>Img url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td><%= product.cost %></td>
        <td><%= product.img_url %></td>
        <td><%= link_to 'Visit', new_order_item_path(:prod_id => product.id) %></td>

    <% end %>
  </tbody>
</table>

