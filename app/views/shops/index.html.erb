<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table class="table table-success table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Cost</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td><%= product.cost %></td>
        <td><%= image_tag(product.img_url, :size => "260x180") %></td>
        <td><%= link_to 'Visit', new_order_item_path(:prod_id => product.id) %></td>

    <% end %>
  </tbody>
</table>

<br>

</br>


<h2><%= link_to "My Orders",myorders_path(current_user) %></h2>


<% if @addresses_has %>

<p id="notice"><%= notice %></p>

<h1>My Addresses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Phone number</th>
      <th>Door no</th>
      <th>Street</th>
      <th>City</th>
      <th>District</th>
      <th>Pincode</th>
      <th>State</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <% if address.user_id.to_i == current_user.id.to_i %>
        <td><%= address.name %></td>
        <td><%= address.age %></td>
        <td><%= address.phone_number %></td>
        <td><%= address.door_no %></td>
        <td><%= address.street %></td>
        <td><%= address.city %></td>
        <td><%= address.district %></td>
        <td><%= address.pincode %></td>
        <td><%= address.state %></td>
        <td><%= address.user_id %></td>
        <td><%= link_to 'Show', address %></td>
        <td><%= link_to 'Edit', edit_address_path(address) %></td>
        <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% else %>
<h2><%=link_to "Add Address",new_address_path %> </h2>
<% end %>
